    <FrameLayout
        android:id="@+id/startScrumButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="120dp"
        android:layout_height="120dp">
        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="startScrumActivity"
            android:layout_above="@+id/startScrumButton"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:src="@drawable/start_scrum"
            android:elevation="@dimen/abc_action_bar_default_height_material"
            />
    </FrameLayout>
    <FrameLayout
        android:layout_below="@+id/startScrumButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_width="120dp"
        android:layout_height="120dp">
        <android.support.design.widget.FloatingActionButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/startScrumButton"
            android:layout_centerHorizontal="true"
